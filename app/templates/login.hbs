<h3>Login</h3>





<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Sign in to continue to BV App</h1>
            <div class="account-wall">
                <img class="responsive" src="assets/img/bazaarvoice-logo-stacked.png" alt="">
                <form class="form-signin" {{action 'authenticate' on='submit'}}>
                    <label for="identification">LDAP</label>
                    {{input class="form-control" id='identification' placeholder='Enter LDAP' value=identification}}
                    <label for="password">Password</label>
                    {{input class="form-control" id='password' placeholder='Enter Password' type='password' value=password}}
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>